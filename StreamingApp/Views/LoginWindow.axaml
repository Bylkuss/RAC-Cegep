<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StreamingApp.ViewModels"
        x:Class="StreamingApp.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="Login"
        Width="400" Height="300"
        Background="LightGray">

    <!-- Add DataContext Type -->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
            <TextBox Watermark="Code Utilisateur" Text="{Binding CodeUtilisateur}" Width="200" />
            <TextBox Watermark="Mot de Passe" Text="{Binding Password}" PasswordChar="*" Width="200" />
            <Button Content="Se Connecter" Command="{Binding LoginCommand}" Width="100" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>