<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StreamingApp.ViewModels"
        x:Class="StreamingApp.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Main Window" Width="800" Height="600">
        
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl>
            <TabItem Header="Clients">
                <DataGrid ItemsSource="{Binding Clients}" AutoGenerateColumns="True" />
            </TabItem>
            <TabItem Header="Films">
                <DataGrid ItemsSource="{Binding Films}" AutoGenerateColumns="True" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>